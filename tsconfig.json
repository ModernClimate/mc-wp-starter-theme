{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "useDefineForClassFields": true
  },
  "include": [
    "assets/scripts/**/*.ts",
    "assets/scripts/**/*.d.ts",
    "assets/scripts/**/*.tsx",
    "assets/scripts/**/*.vue"
  ],
  "exclude": []
}
